picture {

	# code
	default_code = $word_code;

	# display question
	text {
      caption = $question;
   };
   x = 0; y = 200;

	# 1st choice
	text {
      caption = $opt1;
   };
   x = -200; y = 0;

	# 2nd choice
	text {
      caption = $opt2;
   };
   x = -200; y = -100;

	# 3rd choice
	text {
      caption = $opt3;
   };
